<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All statuses
    </h1>

    <a href="/statuses/new" class="btn btn-block btn-outline-secondary">
      Add a new status
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Area of interest
        </th>

        <th>
          Status
        </th>

        <th>
          Action plan
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @statuses.each do |status| %>
      <tr>
        <!-- Display status.id start -->
        <td>
          <%= status.id %>
        </td>
        <!-- Display status.id end -->

        <!-- Display status.area_of_interest start -->
        <td>
          <%= status.area_of_interest %>
        </td>
        <!-- Display status.area_of_interest end -->

        <!-- Display status.status start -->
        <td>
          <%= status.status %>
        </td>
        <!-- Display status.status end -->

        <!-- Display status.action_plan start -->
        <td>
          <%= status.action_plan %>
        </td>
        <!-- Display status.action_plan end -->

        <!-- Display status.created_at start -->
        <td>
          <%= time_ago_in_words(status.created_at) %> ago
        </td>
        <!-- Display status.created_at end -->

        <!-- Display status.updated_at start -->
        <td>
          <%= time_ago_in_words(status.updated_at) %> ago
        </td>
        <!-- Display status.updated_at end -->

        <td>
          <a href="/statuses/<%= status.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
