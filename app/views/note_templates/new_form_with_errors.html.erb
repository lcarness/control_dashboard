<% if @note.present? %>
  <% if @note.errors.any? %>
    <% @note.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new note
</h1>


<hr>

<form action="/create_note" method="post">

  <div class="form-group">
    <label for="notes">
      Notes
    </label>

    <input type="text" id="notes" name="notes" class="form-control" value="<%= @note.notes %>">
  </div>

  <div class="form-group">
    <label for="inputs_id">
      Inputs
    </label>

    <%= select_tag(:inputs_id, options_from_collection_for_select(Input.all, :id, :operating_income, @note.inputs_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create note
  </button>
</form>

<hr>

<a href="/notes">
  Go back
</a>
