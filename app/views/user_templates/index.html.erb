<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Address
        </th>

        <th>
          Industry
        </th>

        <th>
          Year of incorporation
        </th>

        <th>
          Number of employees
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <!-- Display user.id start -->
        <td>
          <%= user.id %>
        </td>
        <!-- Display user.id end -->

        <!-- Display user.email start -->
        <td>
          <%= user.email %>
        </td>
        <!-- Display user.email end -->

        <!-- Display user.password start -->
        <td>
          <%= user.password %>
        </td>
        <!-- Display user.password end -->

        <!-- Display user.first_name start -->
        <td>
          <%= user.first_name %>
        </td>
        <!-- Display user.first_name end -->

        <!-- Display user.last_name start -->
        <td>
          <%= user.last_name %>
        </td>
        <!-- Display user.last_name end -->

        <!-- Display user.address start -->
        <td>
          <%= user.address %>
        </td>
        <!-- Display user.address end -->

        <!-- Display user.industry start -->
        <td>
          <%= user.industry %>
        </td>
        <!-- Display user.industry end -->

        <!-- Display user.year_of_incorporation start -->
        <td>
          <%= user.year_of_incorporation %>
        </td>
        <!-- Display user.year_of_incorporation end -->

        <!-- Display user.number_of_employees start -->
        <td>
          <%= user.number_of_employees %>
        </td>
        <!-- Display user.number_of_employees end -->

        <!-- Display user.created_at start -->
        <td>
          <%= time_ago_in_words(user.created_at) %> ago
        </td>
        <!-- Display user.created_at end -->

        <!-- Display user.updated_at start -->
        <td>
          <%= time_ago_in_words(user.updated_at) %> ago
        </td>
        <!-- Display user.updated_at end -->

        <td>
          <a href="/users/<%= user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
